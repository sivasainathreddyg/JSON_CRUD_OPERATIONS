<core:FragmentDefinition  xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog id="dialogid" class="sapUiSmallMargin">
<content>
   <Toolbar >
   		<Title level="H3" text="Student Information"/>
        <ToolbarSpacer />
   </Toolbar>

            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="Student Number"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/SerialNumber}"
                            placeholder="Enter Serial Number"
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="Student Name"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/StudentName}"
                            placeholder="Enter Student Name"
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="Contact Number"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/ContactNumber}"
                            placeholder="Enter Contact Number"
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="Math A_Marks"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/Math_A_Marks}"
                            placeholder="Enter Math A-Marks"
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="Math B_Marks"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/Math_B_Marks}"
                            placeholder="Enter Math B-Marks "
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="physics Marks"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/Physics_Marks}"
                            placeholder="Enter Physics Marks"
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="Center">
                <VBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                    >
                        <Label
                            text="English Marks"
                            class="sapUiSmallMargin"
                        />
                        <Input
                            value="{/English_Marks}"
                            placeholder="Enter English Marks "
                            style="width: 500px;"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
            <FlexBox class="sapUiSmallMargin" justifyContent="Start">
    <Button text="Submit" press="onSubmit" class="customButton" type="Accept" width="200px"/>
    <Button text="Cancel" press="oncancel" class="customButton" type="Reject" width="200px"/>
    </FlexBox>
</content>
</Dialog>
</core:FragmentDefinition>